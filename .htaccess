<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType application/wasm .wasm
    AddType text/css .css
</IfModule>

# Handle client-side routing
RewriteEngine On
RewriteBase /
RewriteRule ^index\.html$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]