import React, { useState } from "react";
import ArrowDown from "../assets/ArrowDown(Light).svg";

export default function ActivityCardStudent({
  activity,
  formatDate,
  getStudentStatus,
  onMarkAsDone
}) {
  const [open, setOpen] = useState(false);
  const [isSubmitting, setIsSubmitting] = useState(false);

  // Get the current status based on deadline and submission
  const status = getStudentStatus ? getStudentStatus(activity) : "Pending";
  
  // Determine status styling
  const getStatusStyle = () => {
    switch (status) {
      case "Submitted":
        return "text-green-600 bg-green-50 border border-green-200";
      case "Late":
        return "text-yellow-600 bg-yellow-50 border border-yellow-200";
      case "Pending":
        return "text-blue-600 bg-blue-50 border border-blue-200";
      case "Missed":
        return "text-red-600 bg-red-50 border border-red-200";
      default:
        return "text-gray-600 bg-gray-50 border border-gray-200";
    }
  };

  // Check if student can mark as done
  const canMarkAsDone = status === "Pending" || status === "Missed";
  
  // Handle mark as done
  const handleMarkAsDone = async () => {
    if (!onMarkAsDone || !canMarkAsDone) return;
    
    setIsSubmitting(true);
    try {
      await onMarkAsDone(activity.id);
      // Status will update automatically via parent component
    } catch (error) {
      console.error("Error marking as done:", error);
    } finally {
      setIsSubmitting(false);
    }
  };

  // Format the posted date
  const formatPostedDate = (dateString) => {
    if (!dateString) return 'Unknown date';
    try {
      const date = new Date(dateString);
      return date.toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
      });
    } catch {
      return dateString;
    }
  };

  return (
    <div className="bg-white rounded-md shadow-md p-4 sm:p-5">
      <div className="flex items-center justify-between gap-3">
        {/* Left: activity info */}
        <div className="flex items-start gap-3 min-w-0 flex-1">
          <div className="flex-shrink-0">
            <div className="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center text-sm font-bold text-gray-700">
              {activity.task_number?.replace(/\D/g, '') || '?'}
            </div>
          </div>

          <div className="min-w-0 flex-1">
            <div className="text-sm sm:text-base font-semibold truncate">
              {activity.title}
            </div>
            <div className="text-xs text-gray-500 truncate">
              {activity.activity_type} • Posted {formatPostedDate(activity.created_at)}
            </div>
            {activity.instruction && (
              <div className="text-xs text-gray-600 mt-1 line-clamp-2">
                {activity.instruction}
              </div>
            )}
          </div>
        </div>

        {/* Right: status, deadline, expand */}
        <div className="flex items-center gap-4 flex-shrink-0">
          {/* Status Badge */}
          <div className={`px-3 py-1 rounded-full text-xs font-semibold ${getStatusStyle()}`}>
            {status}
          </div>

          {/* Deadline */}
          <div className="text-xs text-gray-500 whitespace-nowrap hidden sm:block">
            {formatDate ? formatDate(activity.deadline) : 'No deadline'}
          </div>

          {/* Expand Button */}
          <button
            onClick={() => setOpen(prev => !prev)}
            aria-label={open ? "Collapse" : "Expand"}
            className={`p-2 rounded-md transform transition-transform ${open ? "rotate-180" : ""}`}
            title={open ? "Collapse" : "Expand"}
          >
            <img src={ArrowDown} alt="Toggle" className="h-4 w-4" />
          </button>
        </div>
      </div>

      {/* Mark as Done Button - Only show for pending/missed activities */}
      {canMarkAsDone && (
        <div className="mt-3 flex justify-end">
          <button
            onClick={handleMarkAsDone}
            disabled={isSubmitting}
            className="px-4 py-2 bg-[#00A15D] text-white text-sm font-semibold rounded-md hover:bg-[#00874E] transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            {isSubmitting ? "Marking..." : "Mark as Done"}
          </button>
        </div>
      )}

      {/* Expanded content */}
      {open && (
        <div className="mt-3 border-t pt-3 text-sm text-gray-700">
          {/* Activity Details */}
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <h4 className="font-semibold mb-2">Activity Details</h4>
              <div className="space-y-2 text-sm">
                <div>
                  <span className="font-medium">Type:</span> {activity.activity_type}
                </div>
                <div>
                  <span className="font-medium">Task:</span> {activity.task_number}
                </div>
                <div>
                  <span className="font-medium">Points:</span> {activity.points || 'Not specified'}
                </div>
                <div>
                  <span className="font-medium">Deadline:</span> {formatDate ? formatDate(activity.deadline) : 'No deadline'}
                </div>
              </div>
            </div>
            
            <div>
              <h4 className="font-semibold mb-2">Submission Status</h4>
              <div className="space-y-2 text-sm">
                <div>
                  <span className="font-medium">Status:</span> 
                  <span className={`ml-2 px-2 py-1 rounded-full text-xs font-semibold ${getStatusStyle()}`}>
                    {status}
                  </span>
                </div>
                {/* REMOVED GRADE DISPLAY */}
                {(activity.submitted === 1 || activity.submitted === true || activity.submitted === '1') && (
                  <div>
                    <span className="font-medium">Submitted:</span> Yes
                    {(activity.late === 1 || activity.late === true || activity.late === '1') && <span className="text-yellow-600 ml-1">(Late)</span>}
                  </div>
                )}
                {canMarkAsDone && (
                  <div className="mt-2">
                    <button
                      onClick={handleMarkAsDone}
                      disabled={isSubmitting}
                      className="w-full px-3 py-2 bg-[#00A15D] text-white text-sm font-semibold rounded-md hover:bg-[#00874E] transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                      {isSubmitting ? "Marking..." : "Mark as Done"}
                    </button>
                  </div>
                )}
              </div>
            </div>
          </div>

          {/* Instructions */}
          {activity.instruction && (
            <div className="mt-4">
              <h4 className="font-semibold mb-2">Instructions</h4>
              <p className="text-sm bg-gray-50 p-3 rounded-md whitespace-pre-wrap">{activity.instruction}</p>
            </div>
          )}

          {/* Link */}
          {activity.link && (
            <div className="mt-4">
              <h4 className="font-semibold mb-2">Resource Link</h4>
              <a 
                href={activity.link} 
                target="_blank" 
                rel="noopener noreferrer"
                className="text-blue-600 hover:text-blue-800 underline text-sm break-all"
              >
                {activity.link}
              </a>
            </div>
          )}

          {/* Posted info */}
          <div className="mt-4 text-xs text-gray-500 border-t pt-2">
            <span>Posted on {formatPostedDate(activity.created_at)}</span>
            {activity.updated_at && activity.updated_at !== activity.created_at && (
              <span className="ml-2">• Updated on {formatPostedDate(activity.updated_at)}</span>
            )}
          </div>
        </div>
      )}
    </div>
  );
}